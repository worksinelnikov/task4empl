{{#employees}}
    <div>
        <b>{{id}}</b>
        <span>{{name}}</span>
        <span>{{phone}}</span>
        <span>{{region}}</span>
        <strong>{{employeeTypeName}}</strong>
    </div>
{{/employees}}

</body>
</html>